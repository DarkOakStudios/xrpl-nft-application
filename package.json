{
  "name": "xrpl-backend",
  "private": true,
  "version": "1.0.0",
  "description": "XRPL backend",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build && npm run copy:assets",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start": "ts-node src/main.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "aws:login": "aws ecr get-login-password --region us-east-2 | docker login --username AWS --password-stdin 569672513829.dkr.ecr.us-east-2.amazonaws.com",
    "aws:build": "npm run aws:login && npm run docker:build && npm run docker:tag && npm run docker:push",
    "aws:deploy": "aws ecs update-service --cluster xrpl-cluster --service xrpl-service-ec2 --force-new-deployment --region=us-east-2",
    "docker:build": "docker build -t xrpl-repository .",
    "docker:tag": "docker tag xrpl-repository:latest 569672513829.dkr.ecr.us-east-2.amazonaws.com/xrpl-repository:latest",
    "docker:push": "docker push 569672513829.dkr.ecr.us-east-2.amazonaws.com/xrpl-repository:latest",
    "copy:assets": "copyfiles ./static/** ./dist/"
  },
  "dependencies": {
    "@nestjs/axios": "0.0.5",
    "@nestjs/common": "^8.1.1",
    "@nestjs/config": "^2.0.0",
    "@nestjs/core": "^8.1.1",
    "@nestjs/mongoose": "^9.0.2",
    "@nestjs/platform-express": "^8.1.1",
    "@nestjs/serve-static": "^2.2.2",
    "@nestjs/websockets": "^8.2.6",
    "acorn": "^8.7.0",
    "axios": "^0.25.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dotenv": "^14.2.0",
    "lodash": "^4.17.21",
    "mongoose": "^6.2.1",
    "nodemon": "^2.0.15",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.4.0",
    "socket.io": "^4.4.1",
    "ts-node": "^10.7.0",
    "xrpl": "^2.1.1",
    "xumm-sdk": "^1.0.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.1.3",
    "@nestjs/schematics": "^8.0.4",
    "@nestjs/testing": "^8.1.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.180",
    "@types/node": "^16.11.1",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "copyfiles": "^2.4.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "jest": "^27.3.0",
    "prettier": "^2.4.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
